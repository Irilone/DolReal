    const value = args[i + 1];
    parsed[key] = value;
  }

  if (!parsed.model || !parsed.input || !parsed.output) {
    log('Error: Missing required arguments', 'red');
    log('Usage: bun run scripts/openai.ts --model <model> --input <file> --output <file>', 'yellow');
    process.exit(1);
  }

